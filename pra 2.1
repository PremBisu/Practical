def frequency(character, sampleString):
    """Function that counts a number of occurrences of a given character in a given string

    Args:
        character (String): the character whose no of occurrences has to be found
        sampleString ([type]): the string from which is to be found

    Returns:
        int: no of occurrences
    """

    count = 0
    for i in range(len(sampleString)):
        if sampleString[i] == character:
            count += 1
    return count


