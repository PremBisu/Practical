        if sampleString[i] == " ":
            if longestLength < count:
                longestLength = count
                longestword = word
            count = 0
            word = ""
        elif i == len(sampleString) - 1:
            count += 1
            word += sampleString[i]
            if longestLength < count:
                longestLength = count
                longestword = word
        else:
